{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
   <div class="container">
      <div class="row">
         <div class="col-md-6 offset-md-3">
            <div class="card mt-5">
               <div class="card-header bg-light">
                  <i class="fas fa-lock mr-2"></i>
                  <strong>Connexion Ã  l'administration</strong>
               </div>
               <div class="card-body">
                  <form action="{{ path('admin_account_login') }}" method="POST">
                     {% if error is not null %}
                        <div class="alert alert-warning">
                           Attention, le nom d'utilisateur ou le mot de passe est incorrect
                        </div>
                     {% endif %}
                     <div class="form-group">
                        <label for="email">Adresse email...</label>
                        <input type="email" name="_username" required class="form-control" id="email" placeholder="Votre email ou bien nom d'utilisateur" value="{{ lastEmail }}">
                     </div>
                     <div class="form-group my-4">
                        <label for="password">Mot de passe...</label>
                        <i class="fas fa-pass"></i>
                        <input type="password" name="_password" required class="form-control" id="password" placeholder="Votre mot de passe">
                     </div>
                     <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                           <i class="fas fa-lock-open mr-2"></i>
                           Je me connecte
                        </button>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
{% endblock %}
