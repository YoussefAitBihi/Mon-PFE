<div class="col-md-4">
   <div class="card bg-light mb-4">
      <div class="card-header text-center">
         {{ ad.rooms }} Chambres, <strong>{{ ad.price }}&euro;</strong> / nuit <br>
         <small class="rating">
            {% if ad.comments | length > 0 %}
               {% include 'partials/rating.html.twig' with {'rating': ad.ratings} %}
               <strong>({{ ad.comments | length }} avis)</strong>
            {% else %}
               Pas encore noté
            {% endif %}
         </small>
      </div>
      <a href="{{ path('ad_show', {'slug': ad.slug}) }}">
         <img src="{{ ad.coverImage }}" alt="Les appartements à louer" title="Annonce de {{ ad.author.fullName }}" style="width: 100%; height: 230px;">
      </a>
      <div class="card-body">
         <h4 class="card-title">{{ ad.title }}</h4>
         <p class="card-text">
            {{ ad.introduction }}
         </p>
         <a href="{{ path('ad_show', {'slug': ad.slug }) }}" class="btn btn-secondary">Voir plus !</a>
         {% if app.user and app.user == ad.author %}
            <a href="{{ path('ad_edit', {'slug': ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
            <a onclick='return confirm("Voulez-vous vraiment supprimer cette annonce : {{ad.title}}")' href="{{ path('ad_remove', {'slug': ad.slug}) }}" class="btn btn-danger">Supprimer l'annonce</a>
         {% endif %}
      </div>
   </div>
</div>